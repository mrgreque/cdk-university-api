// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id      String @id
  cpf     String @unique
  firstName   String
  lastName    String
  password    String
  email       String
  courseId    String
  course      Course @relation(fields: courseId, references: id)

  @@map("students")
}

model Secretary {
  id      String @id
  cpf     String @unique
  firstName   String
  lastName    String
  password    String
  email       String @unique
  sector      String

  @@map("secretaries")
}

model Teacher {
  id      String @id
  cpf     String @unique
  firstName   String
  lastName    String
  password    String
  email       String
  theme       String
  courseId    String
  course      Course @relation(fields: courseId, references: id)

  @@map("teachers")
}

model Course {
  id      String @id
  name    String
  description   String
  teachers       Teacher[]
  students       Student[]

  @@map("courses")
}